<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardMargins"
    card_view:cardCornerRadius="@dimen/cardMargins">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shortDescription"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/detailsCardText"
            android:layout_marginLeft="@dimen/minPadding"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/detailsCardTextSize" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
